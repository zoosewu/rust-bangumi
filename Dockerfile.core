FROM rust:alpine as builder

WORKDIR /app

# 複製 workspace 配置和源碼
COPY . .

# 編譯核心服務
RUN cargo build --release --package core-service

# 運行階段
FROM alpine:latest

RUN apk add --no-cache ca-certificates

COPY --from=builder /app/target/release/core-service /usr/local/bin/

EXPOSE 8000

CMD ["core-service"]
