# 構建階段
FROM rust:slim-bookworm AS builder

WORKDIR /app

# 安裝依賴
RUN apt-get update && apt-get install -y --no-install-recommends \
    libssl-dev pkg-config \
    && rm -rf /var/lib/apt/lists/*

# 複製 Cargo.toml 和工作區配置以利用層快取
COPY Cargo.toml Cargo.lock ./
COPY shared/Cargo.toml ./shared/
COPY core-service/Cargo.toml ./core-service/
COPY fetchers/mikanani/Cargo.toml ./fetchers/mikanani/
COPY downloaders/qbittorrent/Cargo.toml ./downloaders/qbittorrent/
COPY viewers/jellyfin/Cargo.toml ./viewers/jellyfin/
COPY cli/Cargo.toml ./cli/

# 複製 shared 真實源碼（workspace library，需要真實內容）
COPY shared/src ./shared/src

# 創建其他 workspace members 的虛擬源碼（讓 cargo 能解析 manifest）
RUN mkdir -p core-service/src fetchers/mikanani/src downloaders/qbittorrent/src viewers/jellyfin/src cli/src && \
    echo "fn main() {}" > core-service/src/main.rs && \
    echo "fn main() {}" > fetchers/mikanani/src/main.rs && \
    echo "fn main() {}" > downloaders/qbittorrent/src/main.rs && \
    echo "fn main() {}" > viewers/jellyfin/src/main.rs && \
    echo "fn main() {}" > cli/src/main.rs && \
    cargo build --release --package viewer-jellyfin 2>&1 | grep -v "warning" || true && \
    rm -rf viewers/jellyfin/src

# 複製實際源碼
COPY viewers/jellyfin/src ./viewers/jellyfin/src

# 編譯實際應用
RUN cargo build --release --package viewer-jellyfin && \
    strip /app/target/release/viewer-jellyfin

# 運行階段
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates curl libssl3 \
    && rm -rf /var/lib/apt/lists/*

# 創建非 root 用戶
RUN groupadd -r bangumi && useradd -r -g bangumi bangumi

# 複製編譯的二進制文件
COPY --from=builder --chown=bangumi:bangumi /app/target/release/viewer-jellyfin /usr/local/bin/

# 切換用戶
USER bangumi

EXPOSE 8003

HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8003/health || exit 1

CMD ["viewer-jellyfin"]
