# ============================================================================
# 生產環境配置 (docker-compose.yaml)
# ============================================================================
# 使用方式：
#   1. 複製此檔案：cp .env.prod .env
#   2. 修改密碼等敏感資訊
#   3. 啟動服務：docker compose up -d
# ============================================================================

# PostgreSQL
POSTGRES_DB=bangumi
POSTGRES_USER=bangumi
POSTGRES_PASSWORD=changeme_to_secure_password_here
POSTGRES_PORT=5432

# 服務端口（對外映射）
CORE_PORT=8000
FETCHER_PORT=8001
DOWNLOADER_PORT=8002
VIEWER_PORT=8003

# 外部服務
QBITTORRENT_WEBUI_PORT=8080
QBITTORRENT_DHT_PORT=6881
JELLYFIN_PORT=8096
JELLYFIN_DISCOVERY_PORT=7359

# 日誌級別
RUST_LOG=core_service=info,fetcher_mikanani=info,downloader_qbittorrent=info,viewer_jellyfin=info
RUST_BACKTRACE=0

# CORS（生產環境應限制來源）
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=https://your-domain.com

# 資料目錄（Host 絕對路徑，bind mount 至容器內，方便遷移）
POSTGRES_DATA_DIR=/path/to/your/postgres-data
DOWNLOADS_DIR=/path/to/your/downloads
JELLYFIN_LIBRARY_DIR=/path/to/your/jellyfin-media
QBITTORRENT_CONFIG_DIR=/path/to/your/qbittorrent-config
JELLYFIN_CONFIG_DIR=/path/to/your/jellyfin-config
JELLYFIN_CACHE_DIR=/path/to/your/jellyfin-cache

# 系統配置
PUID=1000
PGID=1000
TZ=Asia/Taipei
