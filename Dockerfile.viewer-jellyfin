FROM rust:1.75 as builder

WORKDIR /app

COPY . .

RUN cargo build --release --package viewer-jellyfin

FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /app/target/release/viewer-jellyfin /usr/local/bin/

EXPOSE 8003

CMD ["viewer-jellyfin"]
