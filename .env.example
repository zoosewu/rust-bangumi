# ============================================================================
# PostgreSQL
# ============================================================================
POSTGRES_DB=bangumi
POSTGRES_USER=bangumi
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_PORT=5432

# ============================================================================
# 核心服務
# ============================================================================
CORE_PORT=8000
CORE_SERVICE_URL=http://core-service:8000

# ============================================================================
# Fetcher - Mikanani
# ============================================================================
FETCHER_PORT=8001

# ============================================================================
# Downloader - qBittorrent
# ============================================================================
DOWNLOADER_PORT=8002
QBITTORRENT_URL=http://qbittorrent:8080

# ============================================================================
# Viewer - Jellyfin
# ============================================================================
VIEWER_PORT=8003

# ============================================================================
# 外部服務 - qBittorrent（可選）
# ============================================================================
QBITTORRENT_WEBUI_PORT=8080
QBITTORRENT_DHT_PORT=6881

# ============================================================================
# 外部服務 - Jellyfin（可選）
# ============================================================================
JELLYFIN_PORT=8096
JELLYFIN_DISCOVERY_PORT=7359

# ============================================================================
# CORS 設定
# ============================================================================
# 啟用所有服務的 CORS（true/false，預設: true）
ENABLE_CORS=true

# 允許的來源，多個用逗號分隔
# 範例：
#   - 允許所有：*
#   - 允許本地開發：http://localhost:3000,http://localhost:3001
#   - 允許生產域名：https://app.example.com,https://admin.example.com
# 預設：* (允許所有來源)
CORS_ALLOWED_ORIGINS=*

# ============================================================================
# 系統配置
# ============================================================================
PUID=1000
PGID=1000
TZ=UTC
RUST_LOG=core_service=info,fetcher_mikanani=info,downloader_qbittorrent=info,viewer_jellyfin=info
RUST_BACKTRACE=0
