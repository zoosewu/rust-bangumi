# 構建階段
FROM rust:slim-bookworm AS builder

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    libssl-dev pkg-config \
    && rm -rf /var/lib/apt/lists/*

COPY Cargo.toml Cargo.lock ./
COPY shared/Cargo.toml ./shared/
COPY downloaders/qbittorrent/Cargo.toml ./downloaders/qbittorrent/

RUN awk '/^members/{p=1; print "members = ["; print "    \"shared\","; print "    \"downloaders/qbittorrent\","; next} p&&/^\]/{p=0; print; next} p{next} {print}' Cargo.toml > /tmp/c && mv /tmp/c Cargo.toml

COPY shared/src ./shared/src

RUN --mount=type=cache,id=bangumi-cargo-registry,target=/usr/local/cargo/registry \
    --mount=type=cache,id=bangumi-cargo-git,target=/usr/local/cargo/git \
    --mount=type=cache,id=bangumi-cargo-target,target=/app/target \
    mkdir -p downloaders/qbittorrent/src && \
    echo "fn main() {}" > downloaders/qbittorrent/src/main.rs && \
    cargo build --release --package downloader-qbittorrent || true && \
    rm -rf downloaders/qbittorrent/src

COPY downloaders/qbittorrent/src ./downloaders/qbittorrent/src

RUN --mount=type=cache,id=bangumi-cargo-registry,target=/usr/local/cargo/registry \
    --mount=type=cache,id=bangumi-cargo-git,target=/usr/local/cargo/git \
    --mount=type=cache,id=bangumi-cargo-target,target=/app/target \
    cargo build --release --package downloader-qbittorrent && \
    cp /app/target/release/downloader-qbittorrent /usr/local/bin/downloader-qbittorrent && \
    strip /usr/local/bin/downloader-qbittorrent

# 運行階段
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates curl libssl3 \
    && rm -rf /var/lib/apt/lists/*

RUN groupadd -r bangumi && useradd -r -g bangumi bangumi

COPY --from=builder /usr/local/bin/downloader-qbittorrent /usr/local/bin/

USER bangumi

EXPOSE 8002

HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8002/health || exit 1

CMD ["downloader-qbittorrent"]
