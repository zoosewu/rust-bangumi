# 構建階段
FROM rust:slim-bookworm AS builder

WORKDIR /app

# 安裝依賴
RUN apt-get update && apt-get install -y --no-install-recommends \
    libssl-dev pkg-config \
    && rm -rf /var/lib/apt/lists/*

# 複製 Cargo.toml 和工作區配置以利用層快取
COPY Cargo.toml Cargo.lock ./
COPY shared/Cargo.toml ./shared/
COPY downloaders/qbittorrent/Cargo.toml ./downloaders/qbittorrent/

# 只保留本服務相關的 workspace members
RUN sed -i '/"core-service"/d; /"fetchers/d; /"viewers/d; /"cli"/d' Cargo.toml

# 複製 shared 真實源碼（workspace library，需要真實內容）
COPY shared/src ./shared/src

# 只需本包的虛擬源碼
RUN mkdir -p downloaders/qbittorrent/src && \
    echo "fn main() {}" > downloaders/qbittorrent/src/main.rs && \
    cargo build --release --package downloader-qbittorrent 2>&1 | grep -v "warning" || true && \
    rm -rf downloaders/qbittorrent/src

# 複製實際源碼
COPY downloaders/qbittorrent/src ./downloaders/qbittorrent/src

# 編譯實際應用
RUN cargo build --release --package downloader-qbittorrent && \
    strip /app/target/release/downloader-qbittorrent

# 運行階段
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates curl libssl3 \
    && rm -rf /var/lib/apt/lists/*

# 創建非 root 用戶
RUN groupadd -r bangumi && useradd -r -g bangumi bangumi

# 複製編譯的二進制文件
COPY --from=builder --chown=bangumi:bangumi /app/target/release/downloader-qbittorrent /usr/local/bin/

USER bangumi

EXPOSE 8002

HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8002/health || exit 1

CMD ["downloader-qbittorrent"]
